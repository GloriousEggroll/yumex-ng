using Gtk 4.0;
using Adw 1;

template YumexPackageInfo: Gtk.Box {
    orientation: vertical;
    hexpand: true;
    margin-top: 10;
    margin-bottom: 10;
    margin-start: 20;
    margin-end: 20;
    Adw.PreferencesGroup description_grp {
        visible: false;
        Adw.ActionRow info{
            title: "";
            styles ["accent"]
        }
    }
    Adw.PreferencesGroup update_info_grp {
        visible: false;
        Adw.ActionRow {
            title: _("Advisory ID");
            [suffix]
            Gtk.Label release {
                label: "";
                styles ["accent"]
            }
        }
        Adw.ActionRow {
            title: _("Advisory Type");
            [suffix]
            Gtk.Label type {
                label: "";
                styles ["accent"]
            }
        }
        Adw.ActionRow {
            title: _("Advisory Issued");
            [suffix]
            Gtk.Label issued {
                label: "";
                styles ["accent"]
            }
        }
        Adw.ActionRow desc {
            title: "";
            styles ["accent"]
        }
        Adw.ActionRow references {
            title: "";
            [preffix]
            Adw.PreferencesGroup ref_grp {
                title: _("Bugzilla References");
                margin-start: 10;
                margin-end: 10;
                margin-bottom: 5;
                // references Adw.ActionRow are added here
            }

        }
    }
}

