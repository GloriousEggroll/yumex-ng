using Gtk 4.0;
using Adw 1;

template YumexProgress : Adw.Window {
    default-width: 600;
    default-height: 100;
    hide-on-close: true;
    styles ["progress_window"]  

    Gtk.Box {
        orientation: vertical;
        margin-top: 20;        
        margin-bottom: 20;        
        margin-start: 20;        
        margin-end: 20; 
        Gtk.Box {
            orientation: horizontal;
            valign: center;
            margin-start: 30;
            margin-end: 30;
            Gtk.Box {
                orientation: vertical;
                vexpand: true;
                Gtk.Label title {
                    hexpand: true;
                    xalign: 0.0;
                    styles ["progress_title"]
                }
                Gtk.Label subtitle {
                    hexpand: true;
                    xalign: 0.0;
                    styles ["progress_subtitle"]
                    label: "this is the subtitle";
                }
            }
            
            Gtk.Box {
                vexpand: true;
                Gtk.Spinner {
                    spinning: true;
                }
            }
        }

    }
  
}