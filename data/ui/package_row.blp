using Gtk 4.0;
using Adw 1;

template YumexPackageRow : Adw.ActionRow {
  [prefix]
  CheckButton {
    styles ["selection-mode"]
  }
  [suffix]
  Image installed {
    icon-name: "starred-symbolic";
  }
  [suffix]
  Gtk.Separator {}
  [suffix]
  Gtk.Label version {
    width-chars: 10;
    xalign: 0.1;
  }  
  Gtk.Separator {}
  [suffix]
  Gtk.Label repo {
    width-chars: 10;
    xalign: 0.1;
  }  
}

